{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">
    <article>

        <h3>Team Name: {{team.name}} {{team.mascot}}</h3>
        <h4>Player Roster: {{team.players}}</h4>

            <form action="/nba/{{team._id}}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </article>
        <a href="/nba/myTeams">Go back</a>
</div>
{% endblock %}